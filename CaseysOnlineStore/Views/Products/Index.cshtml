@model IEnumerable<CaseysOnlineStore.Models.Product>
@* model binds to the products list passed into the view.*@
@{
    ViewBag.Title = "Product List";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
			@*Displays column name*@
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
			@*Displays actual data*@
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
			@*model binded Price for a product that is displayed*@
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductID }) |
			@Html.ActionLink("Add to Cart", "Add", "Cart", new { @id=item.ProductID }, 
														   new {  @class="btn btn-primary" })

        </td>
    </tr>
}

</table>

@* Print out page numbers*@

<ul class="pagination">
	@for (int i = 1; i <= ViewBag.MaxPage; i++)
	{
		@* Desired route (url)  -     Products/Index/i *@
		if (i == ViewBag.CurrentPage)
		{
			<li class="active">
				@Html.ActionLink($"page {i}", "Index", new { @id = i })
			</li>

		}
		else
		{
			<li>
		
				@*link that goes to product page with the id of 1*@
				@Html.ActionLink($"page {i}", "Index", new { @id = i })
			</li>
		}
	}
</ul>
